<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Find places</title>
        <link rel="stylesheet" href="/css/style.css">
        <script src="https://cdn.tailwindcss.com"></script>
	</head>

	<body>
        <div class="container p-8">
			<div class="row">
				<div class="col-md-4 mx-auto">
					<form class="w-full max-w-sm" action="" method="POST">
						<div class="md:flex md:items-center mb-6">
							<div class="md:w-1/3">
							<label class="block text-gray-500 font-bold md:text-justify" for="lat-long">
								Find a place
							</label>
							</div>
							<div class="md:w-2/3">
								<input name="lat-lon" class="bg-gray-200 rounded text-gray-700" id="lat-lon" type="text" placeholder="Longitude, Latitude">
							</div>
						</div>

						<div class="md:flex md:items-center mb-6">
							<div class="md:w-1/3">
							<label class="block text-gray-500 font-bold md:text-justify" for="date">
								Choose date(Optional)
							</label>
							</div>
							<div class="md:w-2/3">
								<input name="date" class="bg-gray-200 rounded text-gray-700" id="date" type="date" placeholder="Date">
							</div>
						</div>

						<div class="md:flex md:items-center">
							<div class="md:w-1/3">
							</div>	
							<div class="md:w-2/3">
								<button class="shadow bg-purple-500 text-white font-bold rounded py-3 px-4 search-place"  type="button submit">
								Search
								</button>
							</div>
						</div>
					</form>
				</div>

			</div>
              
        </div>
		<div class="img-container">
				

		</div>
		<script src="/main.js"></script>
	</body>

</html>